@{
    ViewBag.Title = "Home Page";
}

<body ng-app="steamSearch" ng-controller="homeController" ng-init="init()">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark sticky-top">
        <div class="container">
            <a class="navbar-brand shadows-font" href="#"><i class="fab fa-steam mr-2"> </i>Steam Search</a>
            <ul class="navbar-nav">
                <li class="nav-item dropdown" style="display:none;">
                    <a href="#"
                       class="nav-link dropdown-toggle"
                       data-toggle="dropdown">Tools</a>
                    <div class="dropdown-menu" style="display:none;">
                        <a href="#" class="dropdown-item">Link 1</a>
                        <a href="#" class="dropdown-item">Link 2</a>
                        <a href="#" class="dropdown-item">Link 3</a>
                    </div>
                </li>
                <li class="nav-item" style="display:none;">
                    <a class="nav-link" href="#">Play With Friends</a>
                </li>
                <li class="nav-item" style="display:none;">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
            <form class="form-inline ml-auto">
                <input type="text" class="form-control mr-2" placeholder="Find By Username or SteamId..." ng-model="steamId">
                <button class="btn btn-outline-success">Search</button>
            </form>
        </div>
    </nav>

    <div class="jumbotron  text-center jumbo-title">
        <h1 class="shadows-font">Steam Search <i class="fab fa-steam"></i></h1>
        <hr />
        <div class="container">
            <div class="input-group mb-3">
                <input class="form-control"
                       type="text"
                       placeholder="Find By Username or SteamId..." ng-model="steamId" />
                <div class="input-group-append">
                    <button class="btn bg-dark" style="color:white" type="button" ng-click="steamService.GetSteamUserInfo(steamId)">Search</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container content-container" style="min-height:100vh;">

        <div class="row mb-3" ng-show="steamService.dataLoaded == true">
            <ul class="nav nav-tabs w-100">
                <li class="nav-item">
                    <a class="nav-link " id="navUser" ng-class="menuState == 'navUser' ? 'active' : ''  " ng-click="navClicked('navUser')">User</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="navRecent" ng-class="menuState == 'navRecent' ? 'active' : ''  " ng-click="navClicked('navRecent')">Recent Games</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="navFriends" ng-class="menuState == 'navFriends' ? 'active' : ''  " ng-click="navClicked('navFriends')">Friends</a>
                </li>
            </ul>


        </div>
        <div class="h-100" ng-switch="menuState" ng-show="steamService.dataLoaded == true">

            <div class="row w-100" ng-switch-when="navRecent">
                <div class="col-md-4 mb-3" ng-repeat="game in steamService.recentGames">
                    <div class="card game-card ">
                        <img class="card-img-top img-fluid" src="https://steamcdn-a.akamaihd.net/steam/apps/{{game.appid}}/header.jpg" alt="">
                        <div class="card-body">
                            <h4 class="card-title">{{game.name}}</h4>
                            <h6 class="card-title">
                                Time Played 2 Weeks : {{(game.playtime_2weeks / 60).toFixed(2)}} Hours
                            </h6>
                            <h6 class="card-title">
                                Time Played : {{(game.playtime_forever / 60).toFixed(2)}} Hours
                            </h6>

                            <a class="btn btn-outline-primary" href="#">Read More</a>
                        </div>
                    </div>
                </div>



            </div>
            <div class="w-100" ng-switch-when="navUser">
                <div class="row">
                    <div class="col-md-3">
                        <img src="{{steamService.userData.avatarfull}}" alt="avatar" />
                    </div>
                    <div class="col-md-9">
                        <h4>Username : <a href="{{steamService.userData.profileurl}}" target="_blank">{{steamService.userData.personaname}}</a></h4>
                        <h4>Name : {{steamService.userData.realname}}</h4>
                        <h4>{{steamService.ownedGames.length}} Games Owned</h4>
                    </div>
                </div>
                <h4 class="mt-3">Owned Games</h4>
                <div class="row mt-3">
                    <div class="col-md-4 mb-3" ng-repeat="game in steamService.ownedGames | orderBy:'-playtime_forever'" ng-show="game.playtime_forever > 0">
                        <div class="card game-card h-100">
                            <img class="card-img-top img-fluid" src="https://steamcdn-a.akamaihd.net/steam/apps/{{game.appid}}/header.jpg" alt="">
                            <div class="card-body">
                                <h4 class="card-title">{{game.name}}</h4>
                                <h6 class="card-title">
                                    Time Played : {{(game.playtime_forever / 60).toFixed(2)}} Hours
                                </h6>

                                <a class="btn btn-outline-primary" href="https://store.steampowered.com/app/{{game.appid}}/" target="_blank">View in Store</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" ng-switch-when="navFriends">
                Friends
            </div>



        </div>


    </div>

    <footer class="footer bg-dark p-3" style="color:white">
        <div style="text-align:center">

            Made by <a href="http://andrewcalderwood.co.uk" target="_blank"> Andrew Calderwood</a>
        </div>
    </footer>


</body>


