                    <div class="col s12 m3" ng-repeat="game in steamService.recentGames">
                        <div class="card hoverable">
                            <div class="card-image">
                                <img src="https://steamcdn-a.akamaihd.net/steam/apps/{{game.appid}}/header.jpg">
                            </div>
                            <div class="card-content">

                                <p>
                                    Time Played 2 Weeks : {{(game.playtime_2weeks / 60).toFixed(2)}} Hours
                                </p>
                                <p>
                                    Time Played : {{(game.playtime_forever / 60).toFixed(2)}} Hours
                                </p>
                            </div>
                            <div class="card-action">
                                <a href="https://store.steampowered.com/app/{{game.appid}}/" target="_blank">View in store</a>
                            </div>
                        </div>
                    </div>



                </div>
                <div ng-switch-when="navUser">
                    <div class="row card hoverable" style="padding:25px">
                        <div class="col s12 m3">
                            <div class="card-image">
                                <img src="{{steamService.userData.avatarfull}}" alt="avatar" />
                            </div>
                        </div>
                        <div class="col s12 m9">
                            <div class="card-content">
                                <h4>Username : <a href="{{steamService.userData.profileurl}}" target="_blank">{{steamService.userData.personaname}}</a></h4>
                                <h4>Name : {{steamService.userData.realname}}</h4>
                                <h4>{{steamService.ownedGames.length}} Games Owned</h4>

                            </div>

                        </div>
                    </div>
                    <h4 class="mt-3">Owned Games</h4>
                    <div class="row">
